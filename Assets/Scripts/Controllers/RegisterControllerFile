| - _confirmPasswordField : TMP_InputField             |
| - _registerButton : Button                           |
| - _backToLoginButton : Button                        |
| - _errorText : TextMeshProUGUI                       |
| - LOGIN_SCENE : string = "LoginScene"                |
| - MIN_USERNAME_LENGTH : int = 3                      |
| - MIN_PASSWORD_LENGTH : int = 6                      |
